.Title 
  = "#{@user.name}さんのフォローリスト"
.Follow_tabs
  = link_to "フォロー中(#{@followings.count})", "#", class: "Follow_tab Active"
  = link_to "フォロワー(#{@followers.count})", "#", class: "Follow_tab"

.Follow_list.Show
  - if @followings.empty?
    .Empty
      = image_tag "foot.jpg", width: "120px"
      %br
      = "フォロー中の"
      %br
      = "ユーザーはいません"
  - else
    %hr
    = render partial: 'following', collection: @followings

