- if current_user.following?(@user)
  = link_to 'フォロー中', {controller: "relationships", action: "destroy", id: @user.id}, method: :delete, class: "White_btn Following Left"
- else
  = link_to 'フォロー', {controller: "relationships", action: "create", id: @user.id}, method: :post, class: "White_btn Left"