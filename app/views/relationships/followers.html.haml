.Title.Flex
  = link_to 'javascript:history.back()' do
    = icon('fas', 'chevron-left', class: "Back_btn")
  = "#{@user.name}さんのフォローリスト"
.Follow_tabs
  = link_to "フォロー中(#{@followings.count})", "#", class: "Follow_tab"
  = link_to "フォロワー(#{@followers.count})", "#", class: "Follow_tab Active"

.Follow_list
  - if @followings.empty?
    .Empty
      = image_tag "foot.jpg", width: "120px"
      %br
      = "フォロー中の"
      %br
      = "ユーザーはいません"
  - else
    = render partial: 'following', collection: @followings

.Follow_list.Show
  - if @followers.empty?
    .Empty
      = image_tag "foot.jpg", width: "120px"
      %br
      = "フォロワーはいません"
  - else
    = render partial: 'follower', collection: @followers