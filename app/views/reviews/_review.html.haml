.Review_box
  = link_to user_path(review.reviewer_id) do
    - if review.reviewer.profile_image?
      = image_tag review.reviewer.profile_image.url, class: "Review_box__User_image"
    - else
      = image_tag "no-image.jpg", class: "Review_box__User_image"
  .Review_box__Content
    .Review_box__Content__Info
      .Review_box__Content__Info__Name
        = link_to "#{review.reviewer.name}", user_path(review.reviewer_id), class: "Link Text"
      .Position_text
        = review.display_position
      .Star_rating_r
        .Front_r{ style: "width: #{review.score*20}%"}
          =icon('fas', 'star')
          =icon('fas', 'star')
          =icon('fas', 'star')
          =icon('fas', 'star')
          =icon('fas', 'star')
        .Back_r
          =icon('fas', 'star')
          =icon('fas', 'star')
          =icon('fas', 'star')
          =icon('fas', 'star')
          =icon('fas', 'star')
      .Review_box__Content__Info__Time.Text_s
        = review.created_at.strftime("%Y年%-m月%-d日 %H:%M")
    .Review_box__Content__Review.Text
      = simple_format(review.content)