    .Notification1__Text
      = link_to visitor.name, user_path(visitor)
      = "さんが"
      = "あなたのツアーゲストの投稿"
      = link_to "「#{post_g.title}」", posts_g_path(post_g)
      = "をお気に入りに追加しました。"
