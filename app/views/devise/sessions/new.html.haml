.Wrapper
  .Title ログイン
  .Form
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .Form__Content
        = f.label "メールアドレス"
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "Form__Content__Field"
      .Form__Content
        = f.label "パスワード"
        %br/
        = f.password_field :password, autocomplete: "current-password", class: "Form__Content__Field"
        - if devise_mapping.rememberable?
          .field
            = f.check_box :remember_me
            = f.label "ログイン情報を保持する", class: "Check Text"
      = f.submit "ログイン", class: "Btn Text"
    = render "devise/shared/links"